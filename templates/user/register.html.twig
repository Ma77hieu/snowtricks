{% extends 'generic/base.html.twig' %}
{% block title %} Enregistrez-vous {% endblock %}
{% block body %}
    <div class="container">
        <div class="row vh-80 d-flex justify-content-center ">
            <div class="col-4 vh-50 border rounded m-3 p-3">
                {{ form_start(registrationForm) }}
                <label for="registration_form_username" class="mb-2">Nom d'utilisateur:</label>
                {{ form_widget(registrationForm.username,{'attr': {'class': 'form-control'}}) }}
                <label for="registration_form_email" class="my-2">Email:</label>
                {{ form_widget(registrationForm.email,{'attr': {'class': 'form-control'}}) }}
                <label for="registration_form_plainPassword" class="my-2">Mot de passe:</label>
                {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control'}}) }}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="text-center">
                    <button type="submit" class="btn btn-primary mt-4">Cr√©er mon compte</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}

