{# The id heroSection and class editButtonsHero are modified by css/styles.ccs #}
<div class="container-fluid">

    {% if mainMediaUrl is defined and mainMediaUrl is not null %}
    <div class="row my-1 d-flex justify-content-center" id="heroSection"
         style="background:url('{{ asset('uploads/images/') }}{{ mainMediaUrl }}') no-repeat center;
                 background-size:cover;">
        {% else %}
        <div class="row my-1 d-flex" id="heroSection"
             style="background:url('https://images.unsplash.com/photo-1418662589339-364ad47f98a2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1464&q=80')no-repeat center;
        background-size:cover;">
            <a href="#medias_section" class="btn btn-primary position-absolute bottom-0 end-50 w-auto p-4 m-3"> <i
                        class="fas fa-arrow-down"></i> </a>
            {% endif %}
            <div class="row d-flex justify-content-center p-0">
                {# 3 width-equal parts of the hero section: there will be 3 divs with col-4 #}
                <div class="col-4"></div>
                <div class="col-4 d-flex align-items-center justify-content-center text-center">
                    <div class="h1 bg-white text-secondary px-3">
                        <!--if trick.name is defined, it means that we are on trick details or edition pages-->
                        {% if trick.name is defined %}
                            {{ trick.name }}
                        {% else %}
                            Snowtricks, ma√Ætrisez vos figures favorites.
                        {% endif %}
                    </div>
                </div>
                {% if app.user and trick.name is defined %}
                <div class="col-4 px-0 py-1 " >
                    <row class="d-flex justify-content-center align-items-start flex-wrap" id="editButtonsHero">
                        {% if mainMediaId is defined and mainMediaId is not null %}
                        <div class="col-6 col-md-12 px-1 text-center text-white">
                            <a class="btn btn-secondary text-center rounded btnHeroSection"
                               href="{{ path('Media.update', {mediaId:mainMediaId}) }}"><i class="far fa-edit"></i></a>
                        </div>
                        <div class="col-6 col-md-12 px-1 text-center">
                            <a class="btn btn-danger text-center rounded btnHeroSection"
                               href="{{ path('Media.delete', {mediaId:mainMediaId}) }}"><i
                                        class="far fa-trash-alt"></i></a>
                        </div>
                            {% else %}
                                <div class="col-6 col-md-12 px-1 text-center text-white">
                                    <a class="btn btn-secondary text-center rounded btnHeroSection"
                                       href="{{ path('Media.create',{trickId:trick.id,mediaType:1}) }}"><i
                                                class="far fa-edit"></i></a>
                                </div>
                            {% endif %}
                    </row>
                </div>
            </div>

        </div>
        {% endif %}
    </div>
</div>
</div>